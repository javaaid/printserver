# Print Server Environment Configuration
# Copy this file to .env and customize as needed

# Server Configuration
PORT=3000
SERVER_HOST=localhost
NODE_ENV=development

# Printer Configuration
PRINTER_TYPE=epson
PRINTER_INTERFACE=printer
PRINTER_NAME=
PRINTER_HOST=
PRINTER_PORT=
PRINTER_TIMEOUT=3000
PRINTER_CHARACTER_SET=SLOVENIA
PRINTER_REMOVE_SPECIAL_CHARS=false
PRINTER_REPLACE_SPECIAL_CHARS=true

# PDF Render Options
RENDER_FORMAT=A4
RENDER_ORIENTATION=portrait
RENDER_MARGIN_TOP=1cm
RENDER_MARGIN_RIGHT=1cm
RENDER_MARGIN_BOTTOM=1cm
RENDER_MARGIN_LEFT=1cm
RENDER_PRINT_BACKGROUND=true
RENDER_DISPLAY_HEADER_FOOTER=false
RENDER_SCALE=1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=true
LOG_CONSOLE=true

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
